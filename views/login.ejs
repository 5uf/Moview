<%- include('layouts/header.ejs') %>
    <style>

    .login {
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
        text-align: center;
        height: 57vh;
    }
    .login h1, p {
        text-align: center;
    }
    .login form {
        width: 300px;
        margin: 0 auto;
    }
    .login input {
        width: 100%;
        padding: 10px;
        margin-top: 10px;
        border: 1px solid #ccc;
        border-radius: 5px;
    }
    .login .button {
        display: flex;
        justify-content: center;
    }
    .login button {
        width: 100%;
        padding: 10px;
        margin-top: 10px;
        margin-left: 2.5rem;
        border: 1px solid #ccc;
        border-radius: 5px;
        background-color: #f5f5f5;
    }
    .login button:hover {
        background-color: #ccc;
    }

    </style>
     <% if (message != '') { %>
        <div id="message">
            <%- message %>
        </div>
        <% } %>

   <div class="login">
    <h1>Moview Login</h1>
    <form action="/login" method="POST" >
        <input type="text" name="username" placeholder="Username">
        <input type="password" name="password" placeholder="Password">
        <div class="button">
            <button type="button" onclick="window.location.href='/register'">Register</button>
            <button type="submit">Login</button>
        </div>
    </form>
   </div>
<%- include('layouts/footer.ejs') %>